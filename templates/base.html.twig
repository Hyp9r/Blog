    <body class="sidebar-mini">

    <div id="app">
        <div class="main-wrapper">
            <div class="navbar-bg"></div>
            <nav class="navbar navbar-expand-lg main-navbar">
                <a href="{{ path('app_homepage') }}" class="navbar-brand sidebar-gone-hide">Home</a>
